@using StudentPortal.Models.Courses

@model List<CourseVM>

    @if(ViewBag.mesg!=null){
    @ViewBag.mesg
}


<a class="btn btn-primary" asp-action="Create">Create New</a>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Serial No.</th>
            <th>Course Title</th>
            <th>CourseCode</th>
            <th>Credit</th>
            <th>Department</th>
        </tr>

    </thead>
    @{
        int slNo = 0;
    }
    @foreach (var course in Model)
    {


        <tbody>
            <tr>
                <td>@(++slNo)</td>
                <td>@course.Name</td>
                <td>@course.Code</td>
                <td>@course.Credit</td>
                <td>@course.DepartmentName</td>

                <td><a asp-route-id="@course.Id" asp-action="Edit">Edit</a></td>
                <td><a asp-route-id="@course.Id" asp-action="Delete">Delete</a></td>

            </tr>
        </tbody>
    }





</table>

